<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Bingobus_Edit_MobileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:layout_marginTop="40dp"/>

        <TextView
            android:fontFamily="@font/sfpro_display_semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Verification"
            android:textColor="@color/light_black"
            android:textSize="20sp"
            android:layout_marginTop="17.7dp"
            android:letterSpacing="0.0325"/>

        <TextView
            android:fontFamily="@font/sfpro_display_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multitext"
            android:textSize="13.3sp"
            android:id="@+id/upadatenumber"
            android:lineSpacingExtra="5dp"
            android:layout_marginTop="17.7dp"
            android:letterSpacing="0.0325"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19.7dp"
            android:orientation="horizontal"
            android:background="@drawable/rectangle_grayboder"
            android:padding="18dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_phone_receiver"
                android:layout_gravity="center"/>

            <EditText
                android:fontFamily="@font/sfpro_display_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="9549991840"
                android:textSize="13.3sp"
                android:textColor="#000000"
                android:background="#00000000"
                android:inputType="number"
                android:maxLength="10"
                android:id="@+id/numberr"
                android:layout_gravity="center"
                android:textColorHint="#000000"
                android:layout_marginLeft="10dp"
                android:letterSpacing="0.0325"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:background="@drawable/rectangle_green"
        android:fontFamily="@font/sfpro_display_medium"
        android:padding="16.3dp"
        android:textSize="15sp"
        android:text="Update"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:lineSpacingExtra="4dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:letterSpacing="0.0325"/>

</RelativeLayout>